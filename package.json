{
  "name": "@masteos/apollon-localization",
  "version": "1.0.0",
  "description": "Localization files for @masteos/apollon",
  "bin": "bin/index.js",
  "main": "lib/index.js",
  "repository": "https://github.com/masteos/apollon-localization.git",
  "author": "Zao Soula <contact@zaosoula.fr>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "convert": "ts-node ./bin/index.ts convert",
    "sync": "ts-node ./bin/index.ts sync",
    "prebuild": "rimraf build",
    "build": "tsc -p tsconfig.build.json",
    "prettier": "prettier \"*.{js,json,yml,yaml,md}\" \"src/**/*\"",
    "format": "npm run prettier --write",
    "format:check": "yarn prettier --check",
    "lint": "yarn run eslint",
    "lint:staged": "lint-staged --config .lintstagedrc",
    "lint:fix": "npm run eslint:fix"
  },
  "devDependencies": {
    "@masteos/config": "^1.8.1",
    "eslint": "^8.9.0",
    "i18next-conv": "^12.0.1",
    "jest": "^27.5.1",
    "kleur": "^4.1.4",
    "loading-cli": "^1.1.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.5.0",
    "tsc": "^2.0.4",
    "typescript": "^4.5.5",
    "yargs": "^17.3.1"
  }
}
